<p id="notice"><%= notice %></p>

<h1>Institutions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Institution owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.institution_owner %></td>
        <td><%= link_to 'Show', admin_institution_path(institution) %></td>
        <td><%= link_to 'Edit', edit_admin_institution_path(institution) %></td>
        <td><%= link_to 'Destroy', admin_institution_path(institution), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

