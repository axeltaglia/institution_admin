<div class="form-group">
  <%= f.label t('activerecord.attributes.institution.name') %>
  <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <%= f.label t('activerecord.attributes.institution.institution_owner') %>
  <%= collection_select(:institution, :institution_owner_id, InstitutionOwner.all, :id, :email, {:include_blank => true}, {:class => 'form-control'} ) %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

