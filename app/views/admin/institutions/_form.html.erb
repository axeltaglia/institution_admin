<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", placeholder: "Enter name", required: true %>
  <span class="help-block"><i>* This field is required</i><span>
</div>

<div class="form-group">
  <%= f.label :institution_owner_id %>
  <%= collection_select(:institution, :institution_owner_id, InstitutionOwner.all, :id, :email, :include_blank => true) %>
  <span class="help-block"><i>* This field is required</i><span>
</div>

