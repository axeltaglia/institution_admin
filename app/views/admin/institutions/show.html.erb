<div class="row">
	<div class="col-xs-12">
		<div class="box">

			<div class="box-header">
				<h3 class="box-title">Institution</h3>
			</div>

			<div class="box-body">
				<p>
					<strong>Name:</strong>
					<%= @institution.name %>
				</p>

				<p>
					<strong>Institution owner:</strong>
					<%= @institution.institution_owner.email %>
				</p>

				<%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_institution_url(@institution), class: 'btn btn-sm btn-warning' %>

				<%= link_to raw('<i class="fa fa-trash"></i>'), admin_institution_url(@institution), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this Institution?' } %>
			</div>

			<div class="box-footer">
				<%= link_to 'Back', admin_institutions_path, class: 'btn btn-success' %>
			</div>

		</div>
	</div>
</div>