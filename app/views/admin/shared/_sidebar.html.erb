<aside class="main-sidebar">
  <section class="sidebar">

    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "http://placehold.it/160x160", class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <%= link_to '<i class="fa fa-circle text-success"></i><span>Online</span>'.html_safe, admin_root_path %>
      </div>
    </div>

    <ul class="sidebar-menu">
      <li class="header"><%= t('admin.sidebar.main_navigation') %></li>
    
      <% if current_user.is? :institution_owner %>
      <li> <%= link_to '<i class="fa fa-dashboard"></i><span>AdministraciÃ³n</span>'.html_safe, owner_dashboard_path %> </li>
      <% end %>

      <% if current_user.is? :institution_owner %>
      <!-- Calendario de estudiantes -->
      <li><%= link_to '<i class="fa fa-calendar"></i> Calendario de estudiantes'.html_safe, owner_subscriptions_path %></li>

