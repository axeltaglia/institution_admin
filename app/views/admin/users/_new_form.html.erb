<div class="form-group">
  <%= f.label t('activerecord.attributes.user.name') %>
  <%= f.text_field :name, class: "form-control", placeholder: "Enter name", required: true %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <%= f.label t('activerecord.attributes.user.email') %>
  <%= f.email_field :email, class: "form-control", placeholder: "Enter email", required: true %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <%= f.label t('activerecord.attributes.user.password') %>
  <%= f.password_field :password, class: "form-control", required: true %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <%= f.label t('activerecord.attributes.user.repeat_password') %>
  <%= f.password_field :password_confirmation, class: "form-control", required: true %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <h3><%= t('activerecord.attributes.user.roles_mask') %></h3>
  <% for role in User::ROLES %>
    <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"} %>
    <%= label_tag "user_roles_#{role}", role.humanize %><br />
  <% end %>
  <%= hidden_field_tag "user[roles][]", "" %>
</div>