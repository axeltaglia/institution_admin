<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-default">

			<div class="panel-heading">
				<h3 class="box-title"><%= t('admin.users.index.title') %></h3>
			</div>

			<div class="panel-body">
				<p>
					<strong><%= t('activerecord.attributes.users.name') %>:</strong>
					<%= @user.name %>
				</p>

				<p>
					<strong><%= t('activerecord.attributes.users.email') %>:</strong>
					<%= @user.email %>
				</p>

				<p>
					<strong><%= t('activerecord.attributes.roles.name') %>:</strong>
					<%= "Admin" if @user.is? :admin %>
					<%= "Institution Owner" if @user.is? :instituon_admin %>
					<%= "Student" if @user.is? :student %>
				</p>

				<%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_user_url(@user), class: 'btn btn-sm btn-warning' %>

				<%= link_to raw('<i class="fa fa-trash"></i>'), admin_user_url(@user), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: t('admin.users.destroy.warning')} %>
			</div>
				
			<div class="box-footer">
				<%= link_to t('button.back'), admin_users_path, class: 'btn btn-success' %>
			</div>

		</div>
	</div>
</div>