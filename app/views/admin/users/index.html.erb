<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="box-title"><%= t('admin.users.index.title') %></h3>
      </div>

      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-striped" role="grid">
            <thead>
              <tr>
                <th><%= t('activerecord.attributes.users.name') %></th>
                <th><%= t('activerecord.attributes.users.email') %></th>
                <th class="col-xs-1"><%= t('form.column.actions') %></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td> <%= user.name %> </td>
                <td> <%= user.email %> </td>
                <td>
                  <div class="btn-row">
                  <%= link_to raw('<i class="fa fa-eye"></i>'), admin_user_url(user), class: 'btn btn-sm btn-success' %>
                    <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_user_url(user), class: 'btn btn-sm btn-warning' %>
                    <%= link_to raw('<i class="fa fa-trash"></i>'), admin_user_url(user), class: 'btn btn-sm btn-danger', method: :delete,
                    data: { confirm: t('admin.users.destroy.warning') } %>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>

            <tfoot>
              <tr role="row">
                <th><%= t('activerecord.attributes.users.name') %></th>
                <th><%= t('activerecord.attributes.users.email') %></th>
                <th class="col-xs-1"><%= t('form.column.actions') %></th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to t('button.new'), new_admin_user_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
