<%= form_for @user, url: @url, role: :form, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">

        <div class="panel-heading">
          <h3 class="box-title"><%= t('admin.users.edit.title') %></h3>
        </div>

        <div class="panel-body">
          <%= render partial: 'admin/users/edit_form', locals: { f: f } %>
          <%= link_to 'Edit Password', admin_user_edit_password_path, class: 'btn btn-warning' %>
        </div>

        <div class="box-footer">
          <%= link_to t('button.cancel'), admin_users_path, class: 'btn btn-danger' %>
          <%= f.submit t('button.submit'), class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
