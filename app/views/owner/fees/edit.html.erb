<%= form_for @fee, url: @url, role: :form do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">

        <div class="panel-heading">
          <h3 class="box-title">Recibo</h3>
        </div>

        <div class="panel-body">

          <h3><b>Alumno:</b> <%= @fee.student.full_name %></h3>
          <h4><b>Mes:</b> <%= number_to_month(@fee.month) %></h4>
          <h4><b>Estado de la cuota: </b><%= @fee.status %></h4>
          <h4>
            <strong>Suscripto a: </strong>
            <% @fee.items.each do |item| %>
            <%= item.asignature_name %> 
            <% end %>
          </h4>

          <br>
          <%= render partial: 'owner/fees/form', locals: { f: f } %>
        </div>

        <div class="box-footer">
          <%= link_to t('button.cancel'), owner_student_path(@fee.student), class: 'btn btn-danger' %>
          <%= f.submit t('button.submit'), class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
