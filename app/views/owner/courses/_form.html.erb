
<div class="form-group">
  <%= f.label t('activerecord.attributes.course.asignature') %>
  <%= collection_select(:course, :asignature_id, Asignature.all, :id, :name, {:include_blank => true}, {:class => 'form-control'} ) %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <%= f.label t('activerecord.attributes.course.capacity') %>
  <%= f.text_field :capacity, class: "form-control", required: true %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>

<div class="form-group">
  <%= f.label t('activerecord.attributes.course.price') %>
  <%= f.text_field :price, class: "form-control", required: true %>
  <span class="help-block"><i>* <%= t('validation.required_field')%></i><span>
</div>


<%= f.nested_fields_for :course_schedules do |ff| %>
  <h3>Cursada</h3>
  
  <%= ff.remove_nested_fields_link %>

  <div class="form-group">
    <%= ff.label t('activerecord.attributes.schedule.day') %>
    <%= ff.select :day_id, options_from_collection_for_select(Day.all, "id", "name", ff.object.day_id), {:include_blank => true}, {:class => "form-control"}  %>
  </div>

  <div class="form-group">
    <%= ff.label t('activerecord.attributes.course.start_at') %>
    <%= ff.select :start_at_id, options_from_collection_for_select(Hour.all, "id", "str_time", ff.object.start_at_id), {:include_blank => true}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= ff.label t('activerecord.attributes.course.end_at') %>
    <%= ff.select :end_at_id, options_from_collection_for_select(Hour.all, "id", "str_time", ff.object.end_at_id), {:include_blank => true}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= ff.label t('activerecord.attributes.course.classroom') %>
    <%= ff.select :classroom_id, options_from_collection_for_select(Classroom.all, "id", "name", ff.object.classroom_id), {:include_blank => true}, {:class => "form-control"} %>
  </div>

<% end %>

<%= f.add_nested_fields_link :course_schedules %>