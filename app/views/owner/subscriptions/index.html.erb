<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
      <h3 class="box-title">Calendario semanal</h3>
      </div>

      <div class="panel-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th><%= t('activerecord.attributes.students.name') %></th>
              <th><%= t('form.column.actions') %></th>
            </tr>
          </thead>

          <tbody>
            <% @subscriptions.each do |subscription| %>
            <tr>
              <td> 
                <%= link_to owner_student_path(subscription.student) do %> 
                <%= subscription.student.full_name %> (<%= subscription.asignature.name %>)
                <% end %>
              </td>
              <td>
                <div class="btn-row">
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>

          <tfoot>
            <tr role="row">
              <th><%= t('activerecord.attributes.students.name') %></th>
              <th class="hidden-xs"><%= t('activerecord.attributes.students.email') %></th>
              <th><%= t('form.column.actions') %></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to t('button.new'), new_owner_student_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
