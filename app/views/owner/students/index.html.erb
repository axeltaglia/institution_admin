<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.student_owner %></td>
        <td><%= link_to 'Show', owner_student_path(student) %></td>
        <td><%= link_to 'Edit', edit_owner_student_path(student) %></td>
        <td><%= link_to 'Destroy', owner_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_owner_student_path %>
